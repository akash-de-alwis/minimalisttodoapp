<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintCircleRadius="5dp"
    android:background="@drawable/taskback">

    <!-- ImageView to add picture to the right side -->

    <TextView
        android:id="@+id/tvTaskName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/leaguespartanextrabold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTaskDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        android:fontFamily="@font/leaguespartanextrabold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTaskDate"
        android:layout_width="186dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:textColor="@color/primaryTextColor"
        android:textSize="15sp"
        android:fontFamily="@font/leaguespartanmedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTaskTime"
        android:layout_width="0dp"
        android:fontFamily="@font/leaguespartanmedium"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="99dp"
        android:textColor="@color/primaryTextColor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTaskPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/leaguespartanmedium"
        android:textColor="@color/priorityTextColor"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTaskTime" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/leaguespartanextrabold"
        android:textColor="@color/priorityTextColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTaskPriority" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="189dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pixelcutexport" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="144dp"
        android:layout_height="51dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/primaryTextColor"
        android:elevation="4dp"
        android:text="@string/delete"
        android:textAllCaps="false"
        android:textColor="@color/cardBorderColor"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdown" />

</androidx.constraintlayout.widget.ConstraintLayout>